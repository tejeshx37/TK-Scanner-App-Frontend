{
    "name": "tk-scanner-app-root",
    "version": "1.0.0",
    "description": "Root package for TK Scanner App monorepo",
    "scripts": {
        "start": "concurrently \"npm run backend\" \"npm run mobile\"",
        "backend": "cd backend && npm run dev",
        "cleanup": "npx ts-node scripts/cleanup.ts",
        "mobile": "cd mobile && npx expo start -c",
        "tunnel": "cd backend && npx ts-node src/scripts/restart-tunnel.ts",
        "install:all": "npm install && cd backend && npm install && cd ../mobile && npm install"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}